<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:requiresFadingEdge="horizontal"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="395dp"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cat"
            android:layout_alignRight="@+id/tv_cat"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@+id/tv_cat"
            android:background="@drawable/baseline_share_black_18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_item_desc"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="@+id/item_id"
            app:layout_constraintTop_toBottomOf="@+id/item_id" />

        <TextView
            android:id="@+id/tv_item_desc"
            android:layout_width="217dp"
            android:layout_height="58dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:enabled="false"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_id" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_id"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/item_id"
            android:layout_toRightOf="@+id/item_id"
            android:fitsSystemWindows="true"
            android:text="Name"
            android:textColor="@color/colorBlue"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_cat"
            app:layout_constraintStart_toEndOf="@+id/item_id"
            app:layout_constraintTop_toTopOf="@+id/item_id" />

        <TextView
            android:id="@+id/tv_cat"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_margin="30dp"
            android:layout_toEndOf="@id/item_id"
            android:layout_toRightOf="@+id/tv_name"
            android:text="Category"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_name"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <com.like.LikeButton
            android:id="@+id/star_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_name"
            android:layout_alignRight="@+id/tv_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toLeftOf="@+id/tv_name"
            app:icon_size="18dp"
            app:icon_type="heart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_id"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_marginStart="8dp"
            android:padding="10dp"
            android:src="@mipmap/image_1"
            app:border_width="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/status"
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="marquee"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/tv_item_desc"
            app:layout_constraintEnd_toEndOf="@+id/star_button"
            app:layout_constraintTop_toBottomOf="@+id/star_button"
            tools:text="exipiring soon!!" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
